<idea-plugin>
    <id>com.github.gurjot1142.codecricket</id>
    <name>CodeCricket</name>
    <vendor>guru1142</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.CodeCricket</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="CodeCricket"
                factoryClass="com.codecricket.toolwindow.CodeCricketToolWindowFactory"
                anchor="right"
                secondary="false"/>
    </extensions>

</idea-plugin>
